/*公共样式*/
.clearfix{
	zoom: 1;
}

.clearfix:after{
	content: '';
	clear: both;
	display: block;
	width: 0;
	height: 0;
}

.font-bold{
	font-weight: bold;
}

.fl{
	float: left;
}

.fr{
	float: right;
}
/*end*/

.cash-out-top{
	background-color: #fff;
	height: 318rpx;
	margin-top: 10rpx;
}

.can-cash-out{
	font-weight: bold;
	color: #717171;
	text-align: center;
	font-size: 24rpx;
	padding-top: 90rpx;
}

.cash-out-num{
	color: #111111;
	font-size: 32rpx;
	margin-left: 10rpx;
}

.cash-out-now{
	width: 194rpx;
	height: 62rpx;
	line-height: 62rpx;
	padding: 0;
	border: 1rpx solid #0d69e2;
	background-color: #2577E3;
	border-radius: 4rpx;
	color: #ffffff;
	font-size: 28rpx;
	margin-top: 70rpx;
}

.cash-out-tips{
	background-color: #fff;
	height: 340rpx;
	margin-top: 10rpx;
	padding: 35rpx 30rpx;
	box-sizing: border-box;
}

.cash-out-tips text{
	display: block;
	color: #616161;
	font-size: 24rpx;
	line-height: 40rpx;
}

.cash-out-tips-title{
	color: #373737;
	font-size: 24rpx;
	padding-left: 12rpx;
}

.modal-mask{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: #000000;
	opacity: 0.5;
	z-index: 1000;
}

.info-box{
	background-color: #fff;
	position: fixed;
	top: 336rpx;
	left: 50%;
	margin-left: -280rpx;
	z-index: 1001;
	width: 560rpx;
	height: 560rpx;
	border-radius: 6rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}

.box-title{
	color: #111111;
	font-size: 28rpx;
	font-weight: bold;
	display: block;
	text-align: center;
	margin: 48rpx 0;
}

.info-line{
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: 1rpx solid #f1f1f1;
	font-size: 28rpx;
	width: 100%;
	display: flex;
}

.line-title{
	width: 90rpx;
	color: #717171;
}

.line-input{
	height: 90rpx;
	line-height: 90rpx;
	padding-left: 80rpx;
	flex: 1;
}

.line-icon.green{
	color: #54bf36;
}

.line-icon.red{
	color: #ff4400;
}

.info-tips{
	color: #CCCCCC;
	font-size: 20rpx;
	display: block;
	margin-top: 24rpx;
}

.btn-box{
	height: 110rpx;
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	display: flex;
}

.cancel{
	flex: 1;
	background-color: #fff;
	border-right: 1rpx solid #EEEEEE;
	font-size: 28rpx;
	color: #111111;
	line-height: 110rpx;
	border-radius: 0;
	border-top: 1rpx solid #EEEEEE;
}

.yes{
	flex: 1;
	background-color: #fff;
	font-size: 28rpx;
	color: #2577e3;
	line-height: 110rpx;
	border-radius: 0;
	border-top: 1rpx solid #EEEEEE;
}