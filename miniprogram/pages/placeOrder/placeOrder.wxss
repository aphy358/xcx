
.ticket-order-top-bgc{
  position: fixed;
  width: 100%;
  height: 260rpx;
  top: 0;
  background: #2577E3;
  z-index: 0;
}

.ticket-order-top-bg{
  position: absolute;
  width: 100%;
  height: 2000rpx;
  top: -1700rpx;
  overflow: hidden;
}

.ticket-order-top-bg .inner{
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  width: 360%;
  height: 2000rpx;
  border-radius: 100%;
  background: #2577E3;
  box-shadow: 0 0 4rpx #2577E3;
}

.ticket-order-block{
  position: relative;
  background: white;
  border-radius: 12rpx;
  margin: 16rpx 30rpx;
  padding: 24rpx;
}

.ticket-order-img{
  position: relative;
  float: left;
  width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.ticket-order-img image{
  width: 100%;
  height: 100%;
}

.ticket-order-name{
  font-size: 32rpx;
  font-weight: bold;
  color: #111;
}

.ticket-order-price-outer{
  position: absolute;
  bottom: 0;
  right: 0;
}

.ticket-order-price{
  color: #FF5A3D;
  font-weight: bold;
  font-size: 34rpx;
  margin-right: 10rpx;
}

.ticket-order-profit{
  color: #D4A95B;
  font-weight: bold;
  font-size: 24rpx;  
}

.ticket-order-info-row{
  color: #373737;
  font-size: 24rpx;
  line-height: 60rpx;
  
}

.ticket-order-info-label{
  color: #717171;
  margin-right: 6rpx;
}

.ticket-order-num-outer{
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
}

.ticket-order-num-outer text{
  float: right;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  color: #333;
  border: 1rpx solid #DADADA;
  margin-left: 10rpx;
}

.ticket-order-num-outer .icon{
  color: #999;
  font-size: 42rpx;
  line-height: 48rpx;
}




.to-user-info-title{
  font-size: 30rpx;
  font-weight: bold;
  color: #111;
  height: 90rpx;
  line-height: 90rpx;
}

.to-user-info-row{
  border-top: 1rpx solid #F1F1F1;
  height: 90rpx;
  line-height: 90rpx;
}

.to-user-info-label{
  float: left;
  color: #717171;
  font-size: 28rpx;
  width: 180rpx;
}

.to-user-info-input{
  /* float: left; */
  height: 90rpx;
  line-height: 90rpx;
}





/* 底部 费用合计、立即支付 按钮 */
.ticket-bottom-outer{
  position: fixed;
  width: calc(100% - 60rpx);
  height: 110rpx;
  bottom: 0;
  background: white;
  padding: 0 30rpx;
  color: #333333;
  z-index: 999;
}

.ticket-bottom-btn{
  float: left;
  width: 50%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
}

.ticket-bottom-line-one{
  height: 60rpx;
  line-height: 80rpx;
}

.ticket-bottom-line-one.m-top{
  margin-top: 13rpx;
}

.ticket-bottom-line-two{
  line-height: 20rpx;
}

.ticket-bottom-detail{
  margin-right: 20rpx;
  color: #5B6F98;
  font-size: 24rpx;
  
}

.ticket-bottom-btn-confirm{
  background: #2577E3;
  color: white;
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 4rpx;
  
}

.ticket-bottom-total-text{
  color: #FF5A3D;
  font-size: 20rpx;
}

.ticket-bottom-total-price{
  color: #FF5A3D;
  font-weight: bold;
  font-size: 36rpx;
}

.ticket-bottom-total-profit{
  color: #ABAAB0;
  font-size: 20rpx;
}





.ticket-order-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
  z-index: 999;
  transition: all 0.2s linear 0s;
}


.to-price-detail-outer{
  position: fixed;
  bottom: -20rpx;
  left: 0;
  width: calc(100% - 60rpx);
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 30rpx;
  background: #F9F9F9;
  font-size: 28rpx;
  color: #717171;
  z-index: 999;
}
