@import "../../assets/fonts/iconfont.wxss";

/*公共样式*/
.clearfix{
	zoom: 1;
}

.clearfix:after{
	content: '';
	clear: both;
	display: block;
	width: 0;
	height: 0;
}

.fl{
	float: left;
}

.fr{
	float: right;
}
/*end*/

.order-status-box{
	height: 148rpx;
	background-color: #fff;
	color: #111111;
	padding: 0 60rpx 0 48rpx;
}

.status-left{
	float: left;
}

.order-status{
	font-size: 34rpx;
	font-weight: bold;
	display: block;
	margin-top: 20rpx;
}

.remain-time{
	font-size: 28rpx;
	margin-top: 14rpx;
	display: block;
}

.status-right{
	float: right;
}

.jl-tel-icon{
	display: block;
	font-size: 40rpx;
	margin: 16rpx 0 0 20rpx;
	color: #111111;
}

.contact-jl{
	font-size: 18rpx;
	margin-top:14rpx;
	display:block;
}

.product-info{
	height: 348rpx;
	background-color: #fff;
	margin-top: 10rpx;
	padding: 30rpx;
	box-sizing: border-box;
}

.info-top{
	margin-bottom: 20rpx;
}

.product-image{
	width: 180rpx;
	height: 135rpx;
	margin-right: 10rpx;
	float: left;
	border-radius: 4rpx;
}

.product-name{
	height: 98rpx;
	line-height: 48rpx;
	width: 500rpx;
	float: left;
	font-size: 28rpx;
	color: #666666;
	font-weight: bold;
	overflow: hidden;
	word-break: break-all;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
}

.product-unit-price{
	float: right;
	font-size: 24rpx;
	color: #999999;
	padding-right: 20rpx;
}

.info-bot-line{
	line-height: 48rpx;
	display: block;
	font-size: 24rpx;
	color: #373737;
}

.info-bot-line .red{
	color: #ff3737;
}

.book-info{
	height: 363rpx;
	background-color: #fff;
	margin-top: 10rpx;
	padding: 20rpx 30rpx;
	box-sizing: border-box;
}

.info-title{
	font-size: 32rpx;
	color: #111111;
	font-weight: bold;
	margin-bottom: 10rpx;
	display: block;
}

.detail-line{
	height: 55rpx;
	line-height: 55rpx;
	font-size: 24rpx;
	color: #373737;
}

.buy-tips{
	background-color: #fff;
	margin-top: 10rpx;
	padding: 0 30rpx 190rpx;
}

.buy-detail{
	padding: 0 10rpx;
}

.detail-title{
	line-height: 40rpx;
	margin-top: 10rpx;
	font-size: 24rpx;
	color: #373737;
	display: block;
}

.tips-line{
	line-height: 40rpx;
	color: #616161;
	font-size: 24rpx;
	display: block;
}

.options{
	width: 100%;
	height: 110rpx;
	background-color: #fff;
	position: fixed;
	left: 0;
	bottom: 0;
	box-shadow:0 -8rpx 12rpx rgba(0,0,0,0.04);
	text-align: right;
	padding: 12rpx 16rpx;
	box-sizing: border-box;
}

.options button{
	display: inline-block;
	border-radius: 4rpx;
	float: right;
	width: 196rpx;
	height: 84rpx;
	line-height: 84rpx;
	color: #ffffff;
	font-size: 32rpx;
	margin: 0 12rpx;
}

.options button.golden-btn{
	border: 1rpx solid #de9f46;
	background-color: #d4a95b;
}

.options button.blue-btn{
	border: 1rpx solid #0d69e2;
	background-color: #2577e3;
}

.options .cancel-order{
	width: 196rpx;
	height: 70rpx;
	line-height: 70rpx;
	border: 1rpx solid #e6e6e6;
	background-color: #fff;
	color: #999999;
	font-size: 26rpx;
	margin: 8rpx 12rpx;
}

.red-packet-mask{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: #000;
	opacity: 0.4;
	z-index: 1000;
}

.red-packet{
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	width: 458rpx;
	height: 700rpx;
	margin: auto;
	z-index: 1001;
}

.red-packet-img{
	width: 458rpx;
	height: 584rpx;
}

.red-packet-content{
	width: 458rpx;
	height: 700rpx;
	position: absolute;
	top: 0;
	left: 0;
}

.red-packet-title{
	display: block;
	font-size: 36rpx;
	text-align: center;
	color: #de242f;
	font-weight: bold;
	margin: 120rpx 0 26rpx;
}

.red-packet-num{
	text-align: center;
	color: #de242f;
	font-size: 34rpx;
	font-weight: bold;
	padding: 0 30rpx;
}

.red-packet-money{
	font-size: 100rpx;
}

.share-txt{
	font-size: 24rpx;
	color: #fffaee;
	display: block;
	text-align: center;
	margin: 80rpx 0 30rpx;
	padding: 0 30rpx;
}

.btn-box{
	display: flex;
	justify-content: space-around;
	padding: 0 50rpx;
}

.read-detail{
	width: 140rpx;
	height: 50rpx;
	line-height: 50rpx;
	background-color: #de2427;
	border: 1rpx solid #fffaee;
	font-size: 24rpx;
	color: #fffaee;
	padding: 0;
	border-radius: 4rpx;
	margin-right: 72rpx;
}

.share-now{
	width: 140rpx;
	height: 50rpx;
	line-height: 50rpx;
	background-color: #fffaee;
	border: 1rpx solid #de242f;
	font-size: 24rpx;
	color: #de242f;
	padding: 0;
	border-radius: 4rpx;
}

.close-red-packet{
	font-size: 44rpx;
	font-weight: bold;
	color: #ffffff;
	background-color: #707070;
	opacity: 0.7;
	width: 90rpx;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	border-radius: 50%;
	margin: 90rpx auto 0;
}



.ticket-info-title-one{
  padding: 20rpx 0;
  color: #111111;
  font-size: 32rpx;
  font-weight: bold;
}

.ticket-info-title-two{
  color: #4C4C4C;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.ticket-info-text{
  color: #999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}