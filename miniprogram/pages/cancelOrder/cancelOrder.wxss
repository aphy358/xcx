/*公共样式*/
.clearfix{
	zoom: 1;
}

.clearfix:after{
	content: '';
	clear: both;
	display: block;
	width: 0;
	height: 0;
}

.font-bold{
	font-weight: bold;
}

.fr{
	float: right;
}

.red{
	 color: #ff3737;
 }
/*end*/

.order-detail{
	padding-bottom: 100rpx;
}

.tips{
	height: 60rpx;
	line-height: 60rpx;
	background-color: #fff;
	text-align: center;
	font-size: 20rpx;
	color: rgba(212, 169, 91, 0.7);
}

.module-box{
	background-color: #fff;
	margin-top: 10rpx;
	padding: 30rpx 30rpx 30rpx;
}

.module-title{
	color: #111111;
	font-size: 26rpx;
	font-weight: bold;
}

.module-content{
	margin: 20rpx 20rpx 0;
}

.reason-picker{
	width: 356rpx;
	height: 64rpx;
	line-height: 64rpx;
	background-color: #F7F7F7;
	padding: 0 16rpx;
	color: #333333;
	position: relative;
	display: inline-block;
	font-size: 24rpx;
	border-radius: 4rpx;
	border: 1rpx solid #f3f3f3;
	box-sizing: border-box;
}

.reason-picker:after{
	content: '';
	position: absolute;
	top: 26rpx;
	right: 16rpx;
	border-top: 12rpx solid #666666;
	border-left: 12rpx solid transparent;
	border-right: 12rpx solid transparent;
	border-bottom: 24rpx solid transparent;
}

.reason-require{
	font-size: 20rpx;
	margin-left: 16rpx;
}

.reason-info{
	width: 650rpx;
	height: 166rpx;
	background-color: #F7F7F7;
	padding: 20rpx 16rpx;
	box-sizing: border-box;
	border-radius: 4rpx;
	font-size: 22rpx;
	border: 1rpx solid #f3f3f3;
}

.refund-num{
	font-size: 24rpx;
}

.content-line{
	line-height: 64rpx;
	margin-top: 16rpx;
}

.line-title{
	width: 126rpx;
	float: left;
	font-size: 24rpx;
	color: #999999;
}

.content-line input{
	float: left;
	background-color: #F7F7F7;
	width: 356rpx;
	height: 64rpx;
	border-radius: 4rpx;
	border: 1rpx solid #f3f3f3;
	box-sizing: border-box;
	padding-left: 20rpx;
	color: #333333;
	font-size: 24rpx;
}

.explain{
	height: 122rpx;
	line-height: 122rpx;
	text-align: center;
	color: #999999;
	font-size: 22rpx;
}

.jl-tel{
	font-size: 24rpx;
	color: #465084;
	margin-left: 20rpx;
}

.btn-box{
	width: 100%;
	height: 98rpx;
	line-height: 98rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	display: flex;
}

.btn-box button{
	flex: 1;
	border-radius: 0;
	font-weight: bold;
	font-size: 32rpx;
	line-height: 98rpx;
}

.cancel{
	color: #2577e3;
	background-color: #fff;
}

.submit{
	color: #ffffff;
	background-color: #2577E3;
}