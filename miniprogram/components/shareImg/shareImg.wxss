@import "../../assets/fonts/iconfont.wxss";

.canvas-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
  visibility: visible;
  z-index: 9999;
  transition: all 0.2s linear 0;
}

.canvas-mask.hidden{
  visibility: hidden;
}

.share-img{
  position: fixed;
  top: -60%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300px;
  height: 360px;
  background: white;
  border-radius: 4px;
  z-index: 9999;
  transition: all 0.2s linear 0;
}

.share-img .image{
  width: 100%;
  height: 100%;
}

.share-img.default .image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 50px;
  height: 50px;
}

.share-img-text{
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 10px;
  color: #CCCCCC;
  bottom: 10px;
  left: 50%;
  transform: translate(-50%, 0);
}

.share-img-icon{
  position: absolute;
  color: white;
  font-size: 22px;
  background: gray;
  border-radius: 100%;
  width: 42px;
  height: 42px;
  line-height: 42px;
  text-align: center;
  bottom: -60px;
  left: 50%;
  transform: translate(-50%, 0);
}