@import "../../assets/fonts/iconfont.wxss";

.selector-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
  z-index: 9999;
}

.selector-mask.hidden{
  display: none;
}

.selector-outer{
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  background: white;
  height: 414rpx;
  overflow: hidden;
  z-index: 9999;
}

.selector-outer.hidden{
  /* visibility: hidden; */
  bottom: -420rpx;
}

.selector-inner{
  display: flex;
  justify-content: space-around;
  padding: 80rpx 0;
}

.selector-item{
  position: relative;
  text-align: center;
}

.button-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
}

.selector-item-icon{
  display: flex;
  justify-content: space-around;
  width: 150rpx;
  margin-bottom: 20rpx;
}

.selector-item-icon .iconfont{
  background: #74CE36;
  color: white;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 100%;
  font-size: 50rpx;
}

.selector-item-text{
  font-size: 24rpx;
  color: #9B9B9B;
}

.selector-bottom{
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  border-top: 1rpx solid #ddd;
}