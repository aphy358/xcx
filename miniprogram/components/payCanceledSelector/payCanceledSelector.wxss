
.pay-canceled-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
  visibility: visible;
  z-index: 9999;
  transition: all 0.2s linear 0;
}

.pay-canceled-selector-outer{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 270px;
  height: 150px;
  background: white;
  border-radius: 4px;
  text-align: center;
  transition: all 0.2s linear 0;
  overflow: hidden;
  z-index: 9999;
}

.pay-canceled-title{
  background: #2577E3;
  color: white;
  font-size: 16px;
  line-height: 50px;
}

.pay-canceled-btn{
  line-height: 50px;
  font-size: 14px;
}

.pay-canceled-btn.re-pay{
  color: #2577E3;
  border-top: 1rpx solid rgb(216, 216, 216);
}